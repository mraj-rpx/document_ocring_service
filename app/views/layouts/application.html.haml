!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "DocumentOcringService"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"

  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href='/')
          %img.pull-left{src: asset_path('RPX_RationalPatent.gif')}
          %span.divider-appname
            %span.pull-left.logo-divider &#124;
            %span.pull-left.logo-appname Document OCR Service
        .navbar-collapse.collapse.navbar-responsive-collapse
          = render 'shared/navbar_links'

    .container
      .row
        .col-lg-12
          - flash.each do |type, message|
            .alert.fade.in{class: bootstrap_class_for(type)}
              %button.close{'data-dismiss' => 'alert'}
                %i.glyphicon.glyphicon-remove-circle
              %i.glyphicon{class: "glyphicon-#{bootstrap_icon_for(type)}"}
              = message
          = yield
      %footer
        %p &copy; Company 2017
